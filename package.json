{
    "name": "typescript-express-mpa",
    "version": "0.0.0",
    "scripts": {
        "preinstall": "npx npm-force-resolutions",
        "build": "npm run build:panel && npm run build:client && node build.js",
        "build:client": "NODE_ENV=production webpack --config ./src/client/webpack.config.js",
        "build:panel": "NODE_ENV=production webpack --config ./src/panel/webpack.config.js",
        "build:manual": "tsc --build tsconfig.prod.json",
        "lint": "eslint --fix",
        "start": "node -r module-alias/register ./dist/server --env=production",
        "dev": "concurrently --kill-others-on-fail \"npm run dev:panel\" \"npm run dev:server\"",
        "dev:server": "nodemon",
        "dev:panel": "webpack-dev-server --config ./src/panel/webpack.config.js",
        "format": "prettier --write 'src/**/*.ts'",
        "check": "prettier --check 'src/**.ts'",
        "test": "nyc --reporter=html ts-node -r tsconfig-paths/register ./spec --env=testing",
        "test:watch": "nodemon --config ./spec/nodemon.json"
    },
    "nodemonConfig": {
        "watch": [
            "src/server"
        ],
        "ext": "ts, pug",
        "ignore": [
            "src/public",
            "src/client"
        ],
        "exec": "ts-node -r tsconfig-paths/register --project src/server/tsconfig.json ./src/server",
        "env": {
            "NODE_ENV": "development"
        }
    },
    "_moduleAliases": {
        "@daos": "dist/server/daos",
        "@entities": "dist/server/entities",
        "@lib": "dist/server/lib",
        "@db": "dist/server/db",
        "@shared": "dist/server/shared",
        "@api": "dist/server/controllers/api",
        "@server": "dist/server/Server"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsc -p ./src/panel/tsconfig.prod.json --noEmit && tsc --build ./src/server/tsconfig.prod.json && lint-staged",
            "pre-push": "git diff HEAD --quiet && npm test"
        }
    },
    "lint-staged": {
        "*.+(ts)": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    },
    "resolutions": {
        "serialize-javascript": "4.0.0"
    },
    "dependencies": {
        "@material-ui/core": "^4.10.2",
        "@material-ui/icons": "^4.9.1",
        "@material-ui/styles": "^4.10.0",
        "bootstrap": "4.5.0",
        "clsx": "^1.1.1",
        "command-line-args": "5.1.1",
        "cookie-parser": "1.4.5",
        "dotenv": "8.2.0",
        "express": "4.17.1",
        "express-async-errors": "3.1.1",
        "express-static-gzip": "^2.0.7",
        "helmet": "3.23.1",
        "http-status-codes": "1.4.0",
        "module-alias": "2.2.2",
        "morgan": "1.10.0",
        "npm-force-resolutions": "0.0.3",
        "pg": "^8.2.1",
        "prop-types": "^15.7.2",
        "pug": "3.0.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "winston": "3.3.1"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@reduxjs/toolkit": "^1.4.0",
        "@types/command-line-args": "5.0.0",
        "@types/cookie-parser": "1.4.2",
        "@types/express": "4.17.6",
        "@types/find": "0.2.1",
        "@types/helmet": "0.0.47",
        "@types/jasmine": "3.5.11",
        "@types/jquery": "3.5.0",
        "@types/jsonfile": "6.0.0",
        "@types/morgan": "1.9.1",
        "@types/node": "14.0.13",
        "@types/pg": "^7.14.3",
        "@types/react": "^16.9.41",
        "@types/react-dom": "^16.9.8",
        "@types/react-redux": "^7.1.9",
        "@types/react-router-dom": "^5.1.5",
        "@types/supertest": "2.0.9",
        "@types/uuid": "^8.0.0",
        "@types/yup": "^0.29.3",
        "@typescript-eslint/eslint-plugin": "3.3.0",
        "@typescript-eslint/parser": "3.3.0",
        "autoprefixer": "9.8.4",
        "clean-webpack-plugin": "3.0.0",
        "compression-webpack-plugin": "^4.0.0",
        "concurrently": "^5.2.0",
        "css-loader": "3.6.0",
        "eslint": "7.3.0",
        "eslint-config-airbnb-base": "14.2.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-import": "2.21.2",
        "eslint-plugin-prettier": "3.1.4",
        "eslint-plugin-react": "^7.20.2",
        "find": "0.3.0",
        "formik": "^2.1.4",
        "fs-extra": "9.0.1",
        "html-webpack-plugin": "^4.3.0",
        "husky": "4.2.5",
        "jasmine": "3.5.0",
        "jquery": "3.5.1",
        "lint-staged": "10.2.11",
        "mini-css-extract-plugin": "0.9.0",
        "moment": "^2.27.0",
        "node-sass": "4.14.1",
        "nodemon": "2.0.4",
        "nyc": "^15.1.0",
        "optimize-css-assets-webpack-plugin": "5.0.3",
        "popper.js": "1.16.1",
        "postcss-loader": "3.0.0",
        "prettier": "2.0.5",
        "react-perfect-scrollbar": "^1.5.8",
        "react-redux": "^7.2.0",
        "react-router-dom": "^5.2.0",
        "redux": "^4.0.5",
        "sass-loader": "8.0.2",
        "source-map-loader": "^1.0.0",
        "style-loader": "1.2.1",
        "supertest": "4.0.2",
        "terser-webpack-plugin": "3.0.6",
        "ts-loader": "7.0.5",
        "ts-node": "8.10.2",
        "tsconfig-paths": "3.9.0",
        "tslint": "6.1.2",
        "typescript": "3.9.5",
        "uglifyjs-webpack-plugin": "2.2.0",
        "webpack": "4.43.0",
        "webpack-cli": "3.3.12",
        "webpack-dev-middleware": "3.7.2",
        "webpack-dev-server": "^3.11.0",
        "webpack-hot-middleware": "2.25.0",
        "webpack-manifest-plugin": "2.2.0",
        "yup": "^0.29.1"
    }
}
