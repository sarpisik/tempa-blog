{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "strict": true,
        "sourceMap": true,
        "target": "es5",
        "paths": {
            "@common/*": ["../common/*"],
            "@app/*": ["./src/app/*"],
            "@components/*": ["./src/components/*"],
            "@layouts/*": ["./src/layouts/*"],
            "@assets/*": ["./assets/*"]
        }
    },
    "include": ["src/**/*.tsx", "src/**/*.ts"]
}
