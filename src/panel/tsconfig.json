{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "strict": true,
        "sourceMap": true,
        "target": "es5",
        "moduleResolution": "node",
        "paths": {
            "@common/*": ["../common/*"],
            "@app/*": ["src/app/*"],
            "@api": ["src/api/index"],
            "@lib/*": ["src/lib/*"],
            "@components": ["src/components/index"],
            "@layouts/*": ["src/layouts/*"],
            "@assets/*": ["assets/*"]
        }
    },
    "include": ["**/*.tsx", "**/*.ts"]
}
